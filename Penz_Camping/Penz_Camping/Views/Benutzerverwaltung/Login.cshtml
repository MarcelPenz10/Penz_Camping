@model Penz_Camping.Models.UserLogin

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    <span style="color:red">@Html.ValidationSummary()</span>

    <table>
        <thead>
            <tr>
                <td colspan="2">Login</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.LabelFor(u => u.Username, "Benutzername:* ")</td>
                <td>@Html.TextBoxFor(u => u.Username, new { required = "required" })</td>
            </tr>

            <tr>
                <td>@Html.LabelFor(u => u.Password, "Passwort:* ")</td>
                <td>@Html.PasswordFor(u => u.Password, new { required = "required" })</td>
            </tr>

            <tr>
                <td>@Html.LabelFor(u => u.PasswordAdmin, "Passwort für Admin: ")</td>
                <td>@Html.TextBoxFor(u => u.PasswordAdmin)</td>
            </tr>

            <tr>
                <td colspan="2" style="text-align:center">
                    <input type="submit" value="absenden" id="btnSubmit" />
                    <input type="reset" value="abbrechen" id="btnReset" />
                </td>
            </tr>
        </tbody>
    </table>

}